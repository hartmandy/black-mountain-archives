// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserRole {
  ADMIN
  AUTHOR
  USER
}

model User {
  id              String      @id @default(uuid())
  name            String
  email           String      @unique
  bio             String?
  organization    String?
  location        String?
  title           String?
  profileImageUrl String?
  role            UserRole    @default(AUTHOR)
  articles        Article[]
  Biography       Biography[]
}

model Article {
  id        String   @id @default(uuid())
  slug      String   @unique
  title     String
  imageUrl  String?
  content   Json
  summary   String   @db.Char(250)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tag[]
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

enum Role {
  STUDENT
  FACULTY
  GUEST_FACULTY
  STAFF
  PERFORMER
  GUEST
  ADMINISTRATOR
  FAMILY
  UNKNOWN
}

model Person {
  id              String      @id @default(uuid())
  name            String
  altName         String?
  profileImageUrl String?
  imageCaption    String?
  role            Role        @default(STUDENT)
  summary         String?     @db.Char(250)
  subject         Subject
  dob             DateTime?
  dod             DateTime?
  placeOfBirth    String?
  placeOfDeath    String?
  arrivalDate     DateTime?
  departureDate   DateTime?
  biography       Biography[]
}

model Biography {
  id           String   @id @default(uuid())
  slug         String   @unique
  imageUrl     String?
  imageCaption String?
  traits       Json
  summary      String   @db.Char(250)
  content      Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tags         Tag[]
  authorId     String
  author       User     @relation(fields: [authorId], references: [id])
  personId     String
  person       Person   @relation(fields: [personId], references: [id])

  @@index([authorId])
  @@index([personId])
}

model Tag {
  id        String      @id @default(uuid())
  name      String      @unique
  articles  Article[]
  biography Biography[]
}

enum Subject {
  ART_AND_CRAFT
  DRAMA
  PHYSICAL_SCIENCES
  SOCIAL_SCIENCES
  HISTORY
  LANGUAGES
  ENGLISH_AND_WRITING
  MATHEMATICS
  ARCHITECTURE
  MUSIC
  SEMINAR_ON_AMERICA
  FARM_AND_WORK_PROGRAM
  GENERAL
  UNKNOWN
}
